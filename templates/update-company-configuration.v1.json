{
  "id": "VeBjoN1e0zlaoV4ho7ADu",
  "name": "update company configuration",
  "description": "",
  "tags": [],
  "pieces": [
    "@tuyendaovan6789/piece-pipedrive"
  ],
  "pinnedOrder": null,
  "blogUrl": "",
  "template": {
    "displayName": "update company configuration",
    "trigger": {
      "name": "trigger",
      "valid": true,
      "displayName": "webhook trigger cdc company_settings",
      "nextAction": {
        "name": "step_1",
        "type": "CODE",
        "valid": true,
        "settings": {
          "input": {
            "body": "{{trigger['body']}}"
          },
          "inputUiInfo": {},
          "artifact": ""
        },
        "nextAction": {
          "name": "step_2",
          "type": "PIECE",
          "valid": true,
          "settings": {
            "input": {
              "auth": "{{connections['ichiba-pipedrive']}}",
              "term": "{{step_1['workspace_id']}}",
              "limit": "10",
              "fields": "custom_fields",
              "exact_match": true
            },
            "pieceName": "@tuyendaovan6789/piece-pipedrive",
            "actionName": "search_lead",
            "inputUiInfo": {},
            "pieceVersion": "~0.3.20"
          },
          "nextAction": {
            "name": "step_3",
            "type": "CODE",
            "valid": true,
            "settings": {
              "input": {
                "items": "{{step_2['items']}}"
              },
              "inputUiInfo": {},
              "artifact": ""
            },
            "nextAction": {
              "name": "step_4",
              "type": "BRANCH",
              "valid": true,
              "settings": {
                "conditions": [
                  [
                    {
                      "operator": "NUMBER_IS_GREATER_THAN",
                      "firstValue": "{{step_3}}",
                      "secondValue": "0"
                    }
                  ]
                ],
                "inputUiInfo": {}
              },
              "displayName": "is exists lead",
              "onSuccessAction": {
                "name": "step_5",
                "type": "PIECE",
                "valid": true,
                "settings": {
                  "input": {
                    "id": "{{step_2['items'][0]['item']['id']}}",
                    "auth": "{{connections['ichiba-pipedrive']}}"
                  },
                  "pieceName": "@tuyendaovan6789/piece-pipedrive",
                  "actionName": "get_detail_lead",
                  "inputUiInfo": {},
                  "pieceVersion": "~0.3.20"
                },
                "nextAction": {
                  "name": "step_6",
                  "type": "CODE",
                  "valid": true,
                  "settings": {
                    "input": {
                      "new": "{{step_1}}",
                      "old": "{{step_5}}"
                    },
                    "inputUiInfo": {},
                    "artifact": ""
                  },
                  "nextAction": {
                    "name": "step_7",
                    "type": "PIECE",
                    "valid": true,
                    "settings": {
                      "input": {
                        "id": "{{step_5['id']}}",
                        "auth": "{{connections['ichiba-pipedrive']}}",
                        "company_name": "{{step_6['title']}}",
                        "company_size": "{{step_6['company_size']}}",
                        "company_type": "{{step_6['company_type']}}",
                        "company_address": "{{step_6['address']}}",
                        "company_phone_number": "{{step_6['phone_number']}}"
                      },
                      "pieceName": "@tuyendaovan6789/piece-pipedrive",
                      "actionName": "update_lead",
                      "inputUiInfo": {},
                      "pieceVersion": "~0.3.20"
                    },
                    "displayName": "update company settings of this lead"
                  },
                  "displayName": "build payload for update lead"
                },
                "displayName": "get detail of this lead"
              }
            },
            "displayName": "count lead searched"
          },
          "displayName": "search leads by workspace_id"
        },
        "displayName": "parse webhook body"
      },
      "type": "WEBHOOK",
      "settings": {
        "inputUiInfo": {}
      }
    },
    "valid": true
  }
}